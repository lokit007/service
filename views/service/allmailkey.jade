block addcss
	style.
		th {
			text-align: center !important;
		}
		table, td {
			border: 1px solid gray;
			border-collapse: collapse;
		}
		.text-left {
			text-align: left;
			padding-left: 5px;
			padding-right: 5px;
		}
		#myPieChart, #myColumnChart {
			float: left;
			min-width: 300px;
			height: 200px;
		}

