extends ../template/root_temp

block addcss
	style.
		th {
			text-align: center !important;
		}
		table, td {
			border: 1px solid gray;
			border-collapse: collapse;
		}
		.text-left {
			text-align: left;
			padding-left: 5px;
			padding-right: 5px;
		}

block addcontent
	h1 Danh sách key đăng ký
	hr
	table(style="text-align:center;")
		tr
			th(style="width:50px") No.
			th MAC
			th(style="width:50px") State
			th(style="width:100px") Date
			th Member
			th Phone
			th Email
		- each key in data
			tr
				td #{ key.Id }
				td.text-left #{ key.MacKey }
				td #{ key.State }
				td #{ key.DateBlock }
				td.text-left #{ key.NameUser }
				td.text-left #{ key.Phone }
				td.text-left #{ key.Email }
		