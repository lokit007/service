extends ../template/root_temp

block addcss
	link(href="css/dropzone.css", rel="stylesheet")
	style.
		div#div-upload {
			padding: 5%;
		}
		div#div-file-upload {
			border: 1px solid gray;
			padding: 10px;
			margin: 10px 10px 10px 0px;
		}
		.div-item-file {
			border: 1px solid lightgray;
			padding: 5px;
			margin: 5px;
			height: 65px;
		}
		img.img-info {
			width: 50px;
			height: 50px;
			float: left;
		}
		img.img-delete {
			width: 20px;
			height: 20px;
			float: right;
			margin-top: -25px;
			border: 1px solid;
		}
		label.lbl-info {
			max-width: 270px;
			overflow: hidden;
			display: block;
			height: 20px;
		}
		label.lbl-size {
			font-style: italic;
			font-size: 0.9em;
			color: gray;
		}
		form#f-upload-file>button {
			float: right;
			margin-right: 10px;
			width: 90px;
		}
		select#app-select {
			display: block;
			padding: 5px;
		}
		.tb-input {
			display: block;
			min-width: 300px;
			padding-left: 5px;
		}
		form#f-upload-file>button {
			float: right;
			margin-right: 10px;
			width: 90px;
		}
block addjs
	script(src="js/dropzone.js")
	script.
		$("#my-awesome-dropzone").dropzone({ url: "/file/post" });
block addcontent
	h1= data || "Không có dữ liệu truyền vào!"
	#div-upload
		form(action="/service/update", method="post")#f-upload-file
			select#app-select(name="app")
				- each app in list
					option(value="#{ app.key }")= app.name
			br
			label(for="ver-upload") Version
			input#ver-upload.tb-input(type="text", name="url", placeholder="v1.00.000")
			label(for="url-file-upload") Url File Upload
			input#url-file-upload.tb-input(type="text", name="url", placeholder="Đường dẫn lưu file")
			#div-file-upload
				.div-item-file
					img.img-info(src="images/logo.png")
					label.lbl-info Name file
					label.lbl-size Size : 13M
					img.img-delete(src="images/logo.png")
			button#add-file Thêm file
			button#submit(type="submit") Upload
		//- Tham khảo : http://www.dropzonejs.com/
		form(action="/service/upl", method="post", enctype="multipart/form-data")#my-awesome-dropzone.dropzone
			.fallback
				input(name="file", type="file", multiple)
			
